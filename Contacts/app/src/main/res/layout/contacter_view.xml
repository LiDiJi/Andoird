<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_back_indigo_400_36dp"
        android:id="@+id/show_back_contact"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#000044"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:text="姓名"
        android:gravity="center"/>
    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:textColor="#000044"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/email"
        android:layout_alignStart="@+id/emailAddress"
        android:text="电话号码"/>
    <TextView
        android:id="@+id/emailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:textColor="#000044"
        android:layout_above="@+id/organization"
        android:layout_toEndOf="@+id/email"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:text="邮箱"/>

    <TextView
        android:id="@+id/organizationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailAddress"
        android:layout_alignTop="@+id/organization"
        android:layout_marginTop="10dp"
        android:text="组织"
        android:textColor="#000044"
        android:textSize="23sp"/>

    <ImageView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/head" />
    <ImageView
        android:src="@drawable/phone"
        android:id="@+id/phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="37dp"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true" />
    <ImageView
        android:src="@drawable/email"
        android:id="@+id/email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/phone"
        android:layout_alignStart="@+id/phone"
        android:layout_marginTop="32dp" />
    <ImageView
        android:id="@+id/organization"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="32dp"
        android:src="@drawable/organization" />



</RelativeLayout>